{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <h1>Mon profil</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-12">
            <img src="{{ asset('/img/default_profil.jpg') }}" class="img-fluid image_profile">
        </div>
        <div class="col-md-5 col-sm-12">
            {{ form_start(profilForm) }}

            {{ form_rest(profilForm) }}

            <input class="btn btn-primary" type="submit" value="Enregistrer"/>
            <a href="{{ path('home') }}" class="btn btn-primary" role="button">Annuler</a>
            {{ form_end(profilForm) }}
        </div>
    </div>
{% endblock %}
